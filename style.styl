@import './styl/grid.styl';

/**
 * Mixins - TODO move to it's own file
 */
*
 -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
 -moz-box-sizing: border-box;    /* Firefox, other Gecko */
 box-sizing: border-box;         /* Opera/IE 8+ */

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

border-radius()
  vendor('border-radius', arguments)

#form-container
  width 300px
  font-family 'Open Sans'

#form-body
  column(12)
  background: #88afd1
  border-radius(4px 4px 0px 4px)
  text-align center
  padding 2%
  padding-bottom 0

#lead
  margin-bottom 7px

#button-section
  height 50px
  .tab-left
    column(8)
    float left
  .addComment
    column(8)
    font-size 0.8em
    padding 6px
    text-align center

  .tab-right
    column(4)
    float right
    background #88afd1
    height 35px
    border-radius(0px 0px 4px 4px)

  .send-button
    width 90%
    background #3D3939
    color #fff
    height 30px
    border-radius(4px)
    border none
    margin-left 5px

.header-text
  font-family 'Open Sans'
  font-size 0.9em
  color #fff
  padding 12px 0px 12px 12px
  text-align left

#namefield, #telfield
  width 97.5%
  margin-bottom 6px

#emailfield
  width 97.5%
  margin-bottom 8px

#commentfield
  height 150px
  display none
  width 97.5%
  border none
  padding 5px
  background #fff
  font-size 1em

#commentSpan
  font-size 0.8em
  padding-left 40px

input[type=text]
  border none
  padding 5px
  background #fff
  font-size 1em
  border-radius(3px)

// TODO: use mixin
::-webkit-input-placeholder
  color #787878
  font-size 0.8em
  padding-left 7px  
