@import './styl/grid.styl';

/**
 * Mixins - TODO move to it's own file
 */
*
 -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
 -moz-box-sizing: border-box;    /* Firefox, other Gecko */
 box-sizing: border-box;         /* Opera/IE 8+ */

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

border-radius()
  vendor('border-radius', arguments)

#form-container
  width 300px

#lead
  background: #88afd1
  border-radius(4px 4px 0px 4px)
  text-align center
  font-family 'Open Sans'

#form-body
  column(12)

#button-section
  li.tab-left
    column(7)
    float left

  li.tab-right
    column(4)
    float right
    background #88afd1
    height 50px
    margin-top -34px
    border-radius(0px 0px 4px 4px)

  .comment-button
    column(7)
    visibility hidden
    float left

  .send-button
    width 90%
    background #3D3939
    color white
    height 30px
    border-radius(4px)
    border none
    margin-left 5px
    margin-top 16px

.header-text
  font-family 'Open Sans'
  font-size 15px
  color white
  padding 12px 0px 12px 12px
  text-align left

#namefield, #telfield
  width 95%
  margin-bottom 6px

#emailfield
  width 95%
  margin-bottom 8px

input[type=text]
  border none
  padding 5px
  background #fff
  font-size 1em

  border-radius(3px)

// TODO: use mixin
::-webkit-input-placeholder
  color #787878
  font-size 12px
  padding-left 7px



